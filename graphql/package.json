{
  "name": "create-graphql-app-graphql",
  "version": "0.1.0",
  "description": "The graphql server for create-graphql-app",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r dotenv/config ./dist/index.js",
    "dev": "PORT=3010 tsc-watch --onSuccess \"yarn start\"",
    "test": "jest",
    "build": "NODE_ENV=production tsc",
    "deploy": "yarn build && gcloud app deploy --project=create-graphql-app"
  },
  "dependencies": {
    "@apollo/federation": "latest",
    "@apollo/gateway": "^0.6.7",
    "apollo-server": "latest",
    "dotenv": "^8.0.0",
    "graphql": "latest"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "@types/zen-observable": "^0.8.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.2.1",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).(js|ts)"
    ]
  },
  "license": "MIT"
}
